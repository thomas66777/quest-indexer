        "/special": {
            "get": {
                "summary": "gets all the special processing results",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "description": "the type of the special processing you are looking for. EX: auction",
