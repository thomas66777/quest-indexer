        "/games": {
            "get": {
                "summary": "gets all the games running with some basic info",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "---": {
                                        "status": "success",
                                        "data": [
                                            {
                                                "game_id": 1,
                                                "quest_name": "mystery puzzle",
