        "/": {
            "get": {
                "summary": "check if the API is running, always returns true",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "---": {
                                        "status": "success",
                                        "data": true
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/status": {
            "get": {
                "summary": "gets the current status of the poller",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "---": {
                                        "status": "success",
                                        "data": {
                                            "chain_id": "NetXm8tYqnMWky1",
                                            "block_timestamp": "2021-02-05T23:48:37.000Z",
