                    {
                        "name": "pkh",
                        "in": "query",
                        "description": "The tezos address (tz1...) of the user",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
